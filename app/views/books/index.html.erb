<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>
<div class="container">
<div class = "row">
<%= render 'books/list', book: @book ,user: @user%>

<div class = "col-xs-9">
<h1>Books</h1>
<table class="table">
  <thead>
    <th><span>Name</span></th>
    <th><span>Title</span></th>
    <th><span>Body</span></th>
  </thead>
<% @books.each do |book| %> 
  <tbody>
    <tr>
      <td><%=link_to book.user.name, user_path(book.user.id) %></td>
      <td><%=link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  </tbody>

<% end %>
</table>

</div>
</div>
</div>
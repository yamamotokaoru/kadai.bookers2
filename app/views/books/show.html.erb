
<% if flash[:notice] %>
<div class="flash">
        <%= flash[:notice] %>
</div>
<% end %>
<div class="container">
<div class = "row">
<%= render 'books/list', book: @book,user: @user %>
<div class = "col-xs-9">
<h1>Book detail</h1>
<table class="table">
  <tbody>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %><%=link_to @books.user.name, user_path(current_user.id) %></td>
      <td><%=@books.title%></td>
      <td><%= @books.body %></td>
      <% if @books.user.id == current_user.id %>
      <td><%= link_to "Edit",edit_book_path(@books.id),class:"btn btn-success" %>
      <td><%= link_to "Destroy", book_path(@books.id),class:"btn btn-danger" ,method: :delete, "data-confirm" => "Are you sure?" %>
        <% end %>
    </tr>
  </tbody>
</table>
</div>
</div>
</div>